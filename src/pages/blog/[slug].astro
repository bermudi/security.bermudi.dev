---
import { getBlogPost, getBlogPosts } from '../../utils/blogUtils';
import Layout from '../../layouts/Layout.astro';
import { format } from 'date-fns';

export async function getStaticPaths() {
  const allPosts = await getBlogPosts();
  return allPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { slug } = Astro.params;
const post = await getBlogPost(slug);
if (!post) {
  return Astro.redirect('/404');
}
---

<Layout title={post.title}>
  <article class="max-w-4xl mx-auto px-4 py-12">
    <img
      src={post.image}
      alt={post.title}
      class="w-full h-64 object-cover rounded-lg mb-8"
    />
    <h1 class="text-4xl font-bold text-gray-900 mb-4">{post.title}</h1>
    <div class="flex items-center gap-4 text-gray-600 mb-8">
      <span>{format(post.date, 'MMMM d, yyyy')}</span>
      <span>â€¢</span>
      <span>{post.author}</span>
    </div>
    <div class="prose prose-lg max-w-none" set:html={post.content} />
    <div class="mt-8 flex flex-wrap gap-2">
      {post.tags.map(tag => (
        <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-lg text-sm">
          {tag}
        </span>
      ))}
    </div>
  </article>
</Layout>