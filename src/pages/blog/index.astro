---
import Layout from '../../layouts/Layout.astro';
import BlogLayout from '../../layouts/BlogLayout.astro';
import BlogContainer from '../../components/blog/BlogContainer';
import { getBlogPosts } from '../../utils/blogUtils';

const title = "Blog - SecureGuard";
const posts = await getBlogPosts();
---

<Layout title={title}>
  <BlogLayout>
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-secondary-900 dark:text-secondary-100 mb-4">
        Security Insights
      </h1>
      <p class="text-xl text-secondary-600 dark:text-secondary-400">
        Expert analysis and insights on cybersecurity trends and best practices.
      </p>
    </div>

    <BlogContainer posts={posts} client:load />
  </BlogLayout>
</Layout>