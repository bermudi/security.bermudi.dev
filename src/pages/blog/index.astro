---
import Layout from '../../layouts/Layout.astro';
import BlogLayout from '../../layouts/BlogLayout.astro';
import BlogGrid from '../../components/blog/BlogGrid';
import BlogSearch from '../../components/blog/BlogSearch';
import BlogTags from '../../components/blog/BlogTags';

const title = "Blog - SecureGuard";
---

<Layout title={title}>
  <BlogLayout>
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Security Insights</h1>
      <p class="text-xl text-gray-600">
        Expert analysis and insights on cybersecurity trends and best practices.
      </p>
    </div>

    <BlogSearch client:load onSearch={() => {}} />
    <BlogTags 
      client:load 
      tags={['Zero Trust', 'Cloud Security', 'AI', 'Ransomware']}
      selectedTag={null}
      onTagSelect={() => {}}
    />
    <BlogGrid client:load />
  </BlogLayout>
</Layout>