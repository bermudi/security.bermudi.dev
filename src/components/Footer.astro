      <!-- Services -->
      <div>
        <h3 class="text-white text-lg font-semibold mb-4">Servicios</h3>
        <ul class="space-y-2 text-sm">
          {services.map((service) => (
            <li>
              <a 
                href={service.href}
                class="hover:text-white transition-colors service-link"
                data-service={service.title}
              >
                {service.title}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h3 class="text-white text-lg font-semibold mb-4">Empresa</h3>
        <ul class="space-y-2 text-sm">
